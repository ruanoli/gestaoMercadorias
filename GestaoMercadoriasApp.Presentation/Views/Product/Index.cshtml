@model List<GestaoMercadoriasApp.Presentation.ViewModels.ProductConsultViewModel>

@{
}

@if (Model != null && Model.Count > 0)
{
    <div class="table-responsive">
        <table class="table table-sm table-hover table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>NOME</th>
                    <th>TIPO</th>
                    <th>FORNECEDOR</th>
                    <th>NÚMERO DE REGISTRO</th>
                    <th>DESCRIÇÃO</th>
                    <th></th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>

                        <td>@item.Name</td>

                        <td>@item.Type</td>

                        <td>@item.Producer</td>

                        <td>@item.RegistrationNumber</td>

                        <td>@item.Description</td>

                        <td>
                            <a class="btn btn-outline-secondary" href="/Product/Edit?id=@item.Id">Editar</a>
                            <a class="btn btn-outline-danger" href="/Product/Delete?id=@item.Id" onclick="return confirm('Deseja realmente excluir este produto?')">Excluir</a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p class="text-center"><strong>Não há produtos cadastrados.</strong></p>
}

